print(bad_append(2))  # [1, 2]  <-- 共享了同一个默认列表！

# 安全写法：
def good_append(item, lst=None):
    if lst is None:
        lst = []
    lst.append(item)
    return lst

print(good_append(1))  # [1]
print(good_append(2))  # [2]











